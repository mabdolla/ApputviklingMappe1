<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/startspill"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:onClick="showgame"
        android:padding="20dp"
        android:text="@string/startspill"
        android:textAppearance="@android:style/TextAppearance.Large" />

    <Button
        android:id="@+id/sestatistikk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:onClick="showStatistics"
        android:padding="20dp"
        android:text="@string/sestatistikk"
        android:textAppearance="@android:style/TextAppearance.Large" />

    <Button
        android:id="@+id/preferanser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:onClick="showpreferances"
        android:padding="20dp"
        android:text="@string/preferanser"
        android:textAppearance="@android:style/TextAppearance.Large" />


</LinearLayout>
